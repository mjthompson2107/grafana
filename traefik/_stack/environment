#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="grafana.base,nginx.rewrite"
export CONTECO_DC_GLOBAL_STACKNAMES_PREVIOUS="conteco_dc_grafana,conteco_dc_url_rewrite"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_grafana,conteco_dc_grafana_ui"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_grafana"
export CONTECO_DC_GLOBAL_RUNSTACKS="conteco_dc_grafana_ui"
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_grafana_volume"
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL='$CONTECO_DC_GRAFANA_UI_CONF_PATH,$CONTECO_DC_GRAFANA_UI_ENVIRONMENT_CONF_UPSTREAM,$CONTECO_DC_GRAFANA_UI_COMPOSE_EXTENSIONS,$CONTECO_DC_GLOBAL_NETWORKS,$CONTECO_DC_GLOBAL_VOLUMES'
export CONTECO_DC_GRAFANA_UI_ENVIRONMENT_CONF_PATH="/${DOLLAR}{CONTECO_URLPREFIX}/grafana"
export CONTECO_DC_GRAFANA_UI_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{CONTECO_STACKPREFIX}_grafana:3000"
export CONTECO_DC_GRAFANA_UI_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{CONTECO_NETWORKGLOBAL}_overlay, traefik.http.services.${DOLLAR}{CONTECO_STACKPREFIX}_grafana.loadbalancer.server.port=80, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_grafana.entrypoints=conteco, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_grafana.rule=PathPrefix(\"/${DOLLAR}{CONTECO_URLPREFIX}/grafana\")]
${DOLLAR}{CONTECO_DC_GRAFANA_UI_COMPOSE_EXTENSIONS}"
# END GLOBAL SETTINGS

# START SETTINGS elasticsearch.base
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END SETTINGS grafana.base
# START SETTINGS nginx.base
export CONTECO_DC_GRAFANA_UI_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_GRAFANA_UI_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
